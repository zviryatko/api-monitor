{% extends '@layout/default.html.twig' %}

{% block title %}Add job{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            {% for field in errors %}
                {% for error in field %}
                    <div class="alert alert-danger" role="alert">{{ error }}</div>
                {% endfor %}
            {% endfor %}
            <form method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp"
                           placeholder="Project API Service-1">
                    <small id="nameHelp" class="form-text text-muted">Service name, like "Project-name Test API
                        Service-1.
                    </small>
                </div>
                <div class="form-group">
                    <label for="command">Command</label>
                    <textarea name="command" id="command" cols="30" rows="1" class="form-control"
                              placeholder="test $(curl -s --write-out %{http_code} --output /dev/null) -eq 200 && echo 1"></textarea>
                    <small id="commandHelp" class="form-text text-muted">Service command, it should be bash script with
                        return 1 for success and 0 for fail, example: <code>test $(curl -s --write-out %{http_code}
                            --output /dev/null) -eq 200 && echo 1</code></small>
                </div>
                <input type="hidden" name="_csrf" value="{{ token }}">
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
{% endblock %}
